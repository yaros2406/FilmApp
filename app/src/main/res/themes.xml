<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.FilmApp" parent="BaseTheme" />

    <style name="BaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="colorAccent">@color/green_700</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="directColor">@color/gray_300</item>
        <item name="trackColor">@color/gray_400</item>

        <item name="backgroundGradient">@drawable/gradient_light</item>
        <item name="background">@color/gray_100</item>
        <item name="backgroundElement">@color/white</item>

        <item name="materialButtonStyle">@style/Widget.FilmApp.MaterialButton</item>
        <item name="toolbarStyle">@style/Widget.FilmApp.Toolbar</item>
        <item name="materialCardViewStyle">@style/FilmApp.CardView</item>

        <item name="textAppearanceHeadline1">@style/TextAppearance.FilmApp.Headline1</item>
        <item name="textAppearanceBody1">@style/TextAppearance.FilmApp.Body1</item>
        <item name="textAppearanceBody1Green">@style/TextAppearance.FilmApp.Body1Green</item>
        <item name="textAppearanceOverline">@style/TextAppearance.FilmApp.Overline</item>
        <item name="textAppearanceBody2">@style/TextAppearance.FilmApp.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.FilmApp.Button</item>
    </style>

    <style name="Widget.FilmApp.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?backgroundGradient</item>
    </style>

    <style name="Widget.FilmApp.MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">12dp</item>
        <item name="backgroundTint">@color/blue_700</item>
        <item name="cornerRadius">@dimen/corner_radius_default</item>
    </style>

    <style name="FilmApp.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="backgroundTint">?backgroundElement</item>
        <item name="cardCornerRadius">@dimen/corner_radius_default</item>
    </style>
</resources>